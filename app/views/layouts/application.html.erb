<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= javascript_include_tag :defaults, :cache => false %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">Pal.atab.le</a></h1>
      <div id="user-navigation">
		
        <ul class="wat-cf">
			<% if signed_in? %>
				<li><%= render '/layouts/signedIn'%></li>
			<% else %>
				<li><%= render '/layouts/notSignedIn' %></li>
			<% end %>
        </ul>
      </div>
      <div id="main-navigation">
        <ul class="wat-cf"></ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <h1><%= message %></h1>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %>Allison Smith</p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>

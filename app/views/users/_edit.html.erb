<%= form_for(@user) do |f| %>
  <%= render '/users/error_messages', :object => f.object %>
  
	<div class="field">
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</div>

	<div class="field">
		<%= f.label :real_name %><br />
		<%= f.text_field :real_name %>
	</div>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
  
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</div>
  
	<div class="actions">
		<%= f.submit 'Submit' %>
	</div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">change</a>
</div>